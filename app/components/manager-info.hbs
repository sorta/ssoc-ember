<div class="mb-16">
  <LinkTo @route='work.manager' @model={{@manager}}>
    <h2 class="text-left font-normal">{{@manager.name}} Projects</h2>
  </LinkTo>

  <div class="mb-8">
    {{html-safe @manager.description}}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {{#each @manager.projects as |project|}}
      <div class="w-full">
        <h3 class="text-left line-ellipses m-0" title={{project.name}}>{{project.name}}</h3>
        <ResponsiveImage @image={{project.imgName}} alt="{{project.name}} screenshot" class="border-2 border-grey" />
        <p>{{project.summary}}</p>
      </div>
    {{/each}}
  </div>

  {{yield}}
</div>
